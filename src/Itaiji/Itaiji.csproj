<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0</TargetFrameworks>
    <Nullable>enable</Nullable>
	<LangVersion>14</LangVersion>
	 
	  <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>
	
	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>Itaiji.Test</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>

	<!-- netstandard2.0 のときだけコンパイル -->
	<ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
		<Compile Remove="Text/**/*.cs" />
		<None Include="Text/**/*.cs" />
	</ItemGroup>

	<!-- net35 のときだけコンパイル -->
	<ItemGroup Condition="'$(TargetFramework)' != 'net3.5'">
		<Compile Remove="netFW/**/*.cs" />
		<None Include="netFW/**/*.cs" />
	</ItemGroup>
	
	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
	  <PackageReference Include="System.Memory" Version="4.6.3" />
	</ItemGroup>
	
	<ItemGroup>
	  <Compile Include="..\Shared\EnumExtension.cs" Link="EnumExtension.cs" />
	  <Compile Include="..\Shared\globalUsing.cs" Link="globalUsing.cs" />
	  <Compile Include="..\Shared\ItaijiUtil.cs" Link="ItaijiUtil.cs" />
	  <Compile Include="..\Shared\IvsType.cs" Link="IvsType.cs" />
	  <Compile Include="..\Shared\Kanji.cs" Link="Kanji.cs" />
	  <Compile Include="..\Shared\KanjiEnumerator.cs" Link="KanjiEnumerator.cs" />
	  <Compile Include="..\Shared\Library.cs" Link="Library.cs" />
	  <Compile Include="..\Shared\RuneExtension.cs" Link="RuneExtension.cs" />
	  <Compile Include="..\Shared\SpanKanjiEnumerator.cs" Link="SpanKanjiEnumerator.cs" />
	  <Compile Include="..\Shared\StringExtension.cs" Link="StringExtension.cs" />
	</ItemGroup>

</Project>
